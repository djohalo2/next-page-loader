{
  "name": "next-page-loader",
  "description": "A simple to use, lightweight Next.js page progress loader.",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.modern.js",
  "types": "./dist/index.d.ts",
  "source": "./index.tsx",
  "license": "MIT",
  "author": "Djovanni Tehubijuluw",
  "repository": {
    "type": "git",
    "url": "https://github.com/djohalo2/next-page-loader.git"
