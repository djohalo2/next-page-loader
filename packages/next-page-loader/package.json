    "next": "12.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "microbundle": "^0.15.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
